<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.waterreminder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WaterReminder">'
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".name"></activity>
        <activity android:name=".home_screen">

        </activity>
        <activity android:name=".event_adder"/>
        <activity android:name=".Calander"></activity>
        <activity
            android:name=".grab_weight"
            android:parentActivityName=".MainActivity"></activity>
        <receiver android:name=".ReminderBroadcast" />
    </application>

</manifest>